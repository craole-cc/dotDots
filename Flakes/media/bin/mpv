#!/usr/bin/env bash

CFG_DIR="${PWD}/config/mpv"
mkdir -p "$CFG_DIR/scripts"

#@ Copy the ytdl_hook script if it doesn't exist
if [ ! -f "$CFG_DIR/scripts/ytdl_hook.lua" ]; then
	cp "/nix/store/wy5f4d2sjki9v930iasmzr5538jk0nhl-mpv-with-scripts-0.39.0/share/mpv/scripts/ytdl_hook.lua" "$CFG_DIR/scripts/"
fi

#@ Run MPV with configs
/nix/store/wy5f4d2sjki9v930iasmzr5538jk0nhl-mpv-with-scripts-0.39.0/bin/mpv --config-dir="$CFG_DIR" "$@"
