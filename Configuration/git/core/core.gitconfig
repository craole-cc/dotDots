[core]
  attributesfile = main.gitattributes
  autocrlf = false
  editor = hx
  excludesFile = main.gitignore
  filemode = false
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[commit]
  verbose = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f

[init]
  defaultBranch = main
