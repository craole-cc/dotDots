    _api_url_simple="$(printf '%s%s' "$_api_url" "$_format_simple")"
    _api_url_json="$(printf '%s%s' "$_api_url" "$_format_json")"
    _response_struct="$(curl -s "$_api_url_struct")"
    _response_simple="$(curl -s "$_api_url_simple")"
