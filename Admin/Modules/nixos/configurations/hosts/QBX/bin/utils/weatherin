    #{ Print the parsed variables
    printf '\nDEBUG: Structured\n\tURL: %s\n\tRES: %s\n' \
      "$_api_url_struct" "$_response_struct"
    printf '\nDEBUG:     Simple\n\tURL: %s\n\tRES: %s\n' \
