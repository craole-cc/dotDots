{
  key-bindings = {
    #~@ Clipboard Operations
    clipboard-copy = "Control+Shift+c XF86Copy";
    clipboard-paste = "Control+Shift+v XF86Paste";

    #~@ Scrollback Navigation
    scrollback-up-page = "Shift+Page_Up";
    scrollback-down-page = "Shift+Page_Down";
    scrollback-up-line = "Control+Shift+Up";
    scrollback-down-line = "Control+Shift+Down";

    #~@ Font Size Adjustment
    font-increase = "Control+plus Control+equal";
    font-decrease = "Control+minus";
    font-reset = "Control+0";

    #~@ Search Functionality
    search-start = "Control+Shift+f";

    #~@ Theme Switching
    #? Manual theme toggle between dark (1) and light (2)
    color-theme-switch-1 = "F11"; # Switch to dark theme
    color-theme-switch-2 = "F12"; # Switch to light theme
  };
}
